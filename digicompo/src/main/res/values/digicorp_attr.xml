<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FontView">
        <attr name="font_path" format="string" />
    </declare-styleable>

    <declare-styleable name="TextView" parent="FontView">
        <attr name="font_path" />
        <attr name="html_style" format="enum">
            <enum name="strike_through" value="0" />
        </attr>
    </declare-styleable>

    <declare-styleable name="Button" parent="FontView">
        <attr name="font_path" />
    </declare-styleable>

    <declare-styleable name="EditText" parent="FontView">
        <attr name="font_path" />
    </declare-styleable>

    <declare-styleable name="CheckBox" parent="FontView">
        <attr name="font_path" />
    </declare-styleable>
</resources>